<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEB3B"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/snapchatimageview"
        android:layout_width="107dp"
        android:layout_height="106dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="457dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/snaplogo" />

    <Button
        android:id="@+id/logInSignUpButton"
        android:layout_width="156dp"
        android:layout_height="64dp"
        android:layout_marginStart="127dp"
        android:layout_marginTop="556dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="111dp"
        android:backgroundTint="#2196F3"
        android:onClick="logInSignUp"
        android:text="Log in/Sign up"
        android:textAllCaps="false"
        android:textColor="#FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <AutoCompleteTextView
        android:id="@+id/usernameText"
        android:layout_width="358dp"
        android:layout_height="75dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="328dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="328dp"
        android:hint="Email"
        android:textColor="#0C0C0C"
        android:textColorHint="#80090909"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/passwordText"
        android:layout_width="358dp"
        android:layout_height="75dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="417dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="239dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#090909"
        android:textColorHint="#800C0C0C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>