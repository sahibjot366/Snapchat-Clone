<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.snapchatclone">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/snapchaticon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/snapchaticon"
        android:supportsRtl="true"
        android:theme="@style/Theme.SnapchatClone">
        <activity android:name=".ViewSnapActivity"></activity>
        <activity android:name=".SendSnapActivity" />
        <activity android:name=".CreateAndPostSnapActivity" />
        <activity android:name=".SnapActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>